    "imagePublisher": "Canonical",
    "imageOffer": "0001-com-ubuntu-server-jammy",
    "imageSku": "22_04-lts-arm64",
    "imageVersion": "latest",
    "peSubnetLastIp": "10.0.3.254"
  },
  "resources": [
    {
      "type": "Microsoft.Network/routeTables",
      "apiVersion": "2023-09-01",
      "name": "[variables('routeTableVm1Name')]",
      "location": "[parameters('location')]",
      "tags": {
        "bicepRevision": "[string(variables('bicepRevision'))]"
      },
      "properties": {
        "disableBgpRoutePropagation": false,
        "routes": [
          {
            "name": "default-to-firewall",
            "properties": {
              "addressPrefix": "0.0.0.0/0",
              "nextHopType": "VirtualAppliance",
              "nextHopIpAddress": "[variables('firewallPrivateIp')]"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/routeTables",
      "apiVersion": "2023-09-01",
      "name": "[variables('routeTableVm2Name')]",
      "location": "[parameters('location')]",
      "tags": {
        "bicepRevision": "[string(variables('bicepRevision'))]"
      },
      "properties": {
        "disableBgpRoutePropagation": false,
        "routes": [
          {
            "name": "pe-to-firewall",
            "properties": {
              "addressPrefix": "[variables('peSubnetPrefix')]",
              "nextHopType": "VirtualAppliance",
              "nextHopIpAddress": "[variables('firewallPrivateIp')]"
            }
          }
        ]
      }
    },
    {
