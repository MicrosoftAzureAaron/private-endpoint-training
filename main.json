    "adminPassword": {
      "type": "securestring"
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_B2ps_v2",
      "allowedValues": [
        "Standard_B2pls_v2",
        "Standard_B2ps_v2",
        "Standard_B2pts_v2",
        "Standard_B4pls_v2",
        "Standard_B4ps_v2"
