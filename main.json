  "variables": {
    "bicepRevision": "0.2.13",
    "vnetName": "training-vnet",
    "vnetAddressPrefix": "10.0.0.0/16",
    "firewallSubnetPrefix": "10.0.0.0/24",
    "vm1SubnetPrefix": "10.0.1.0/24",
    "vm2SubnetPrefix": "10.0.2.0/24",
    "peSubnetPrefix": "10.0.3.0/24",
    "routeTableVm1Name": "rt-vm1",
    "routeTableVm2Name": "rt-vm2",
